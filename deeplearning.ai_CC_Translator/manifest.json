{
    "manifest_version": 3,
    "name": "deeplearning.ai_CC_Translator",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "https://api.deepl.com/"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "48": "icon.png"
    }
  }